<body>
  <h1>Pirate:</h1>
    <div class="pirate">
      <h3>Name: <%= @pirate.name %></h3><br>
      <h4>Weight: <%= @pirate.weight %> lbs</h4><br>
      <h5>Height: <%= @pirate.height %> inches</h5>
    </div><br>


    <% @pirate.ships.each.with_index do |ship, index| %>
    <h1>Ship <%= index + 1 %>:</h1>
    <div class="ship">
        <p>Name: <%= ship.name %></p><br>
        <p>Type: <%= ship.type %></p><br>
        <p>Booty: <%= ship.booty %></p>
    </div><br>
    <% end %>



</body>
